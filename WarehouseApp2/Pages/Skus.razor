@using WarehouseApp2.Components
@using WarehouseService.Models

@page "/skus/{Stage?}"

@switch (Stage?.ToLower()) {
    case "assign":
        <Assign 
            Assignments="@Assignments"
            SkusToAssign="@SkusToAssign" 
            />
        break;
    case "confirm":
        <ConfirmAutoAssign 
            Assignments="@Assignments"
            />
        break;
    default:
        <SkusComponent
            SkusToAssign="@SkusToAssign"
            />
        break;
}

@code {
    [Parameter]
    public string? Stage { get; set; }
    
    private HashSet<Sku> SkusToAssign { get; set; } = new();
    private List<Assignment> Assignments { get; set; } = new();
}
